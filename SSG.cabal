    , yaml
    , bibtex==0.1.0.8
--    , parsec
--    , old-time
    , directory
    , containers

  default-language: Haskell2010

executable ssgbake
  main-is: ssgBake.hs
  other-modules:

  build-depends:
      base ==4.*
    , uniform-strings
    , uniform-convenience
    , uniform-fileio
    , uniform-error
    , SSG
    , shake
    , scotty
    , warp
    , wai-middleware-static

  hs-source-dirs:
    src
  default-language: Haskell2010

executable ssg10
  main-is: ssg10.hs
  other-modules:

  build-depends:
      base ==4.*
    , uniform-strings
    , uniform-convenience
    , uniform-fileio
    , uniform-error
    , SSG

  hs-source-dirs:
    src
