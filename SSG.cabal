
name:           SSG
version:        0.0.1
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10

library
  exposed-modules:
      Lib.Bake
      Lib.Shake
      Lib.FileMgt
      Lib.Templating
      Lib.Pandoc
      Lib.Foundation
      Lib.ReadSettingFile
      Lib.Indexing
      Lib.BibTex
      Lib.YamlBlocks

  other-modules: Paths_SSG

  hs-source-dirs:
      .
  ghc-options: -Wall
  build-depends:
      base ==4.*
    , uniform-algebras
    , uniform-strings
    , uniform-fileio
    , uniform-error
    , uniform-time

    , pandoc
    , pandoc-citeproc
    , doctemplates
